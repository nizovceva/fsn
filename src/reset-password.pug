extends pug/base-auth

append vars
	- html.classList.push('page-registration')

block content
	section.pt-60.pt-sm-80.pt-md-65.pt-lg-80.pt-xl-100.pb-55.pb-sm-60.pb-md-45.pb-xl-7
		.container.text-center
			.row.justify-content-center
				.col-lg-8.col-sm-10
					.card.card-form
						.card-header.text-left
							a.card-back(href="#")
								+svg("arrow-left-long")(width="49" height="18")
							h4.card-title.m-0.ml-30 Сбросить
						.card-body
							.row.justify-content-center
								.col-xl-10
									form.form.needs-validation(novalidate)
										.form-group.row
											.col-md-12.text-center
												p Текущий e-mail 120236@gmail.com
										.form-group.row
											label.col-md-4.col-form-label Новый пароль
											.col-md-8
												input.form-control(type="text" placeholder="")
												.invalid-feedback Необходимо заполнить Пароль.
										.form-group.row
											label.col-md-4.col-form-label Подтверждение пароля
											.col-md-8
												input.form-control(type="text" placeholder="")
												.invalid-feedback Необходимо заполнить Подтверждение пароля.
										.form-group.row.mt-0
											label.col-md-4.col-form-label
											.col-md-8
												button.btn.btn-primary.w-100.mt-10(type="submit") Сбросить